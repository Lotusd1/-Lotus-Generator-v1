<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Selección de elementos
        const estiloArtisticoSelect = document.getElementById('estilo-artistico');
        const stylecustomSelect = document.getElementById('style-custom');
        const grupoSelect = document.getElementById('grupo');
        const groupcustomSelect = document.getElementById('group-custom');
        const personajeSelect = document.getElementById('personaje');
        const complementopersonajeSelect = document.getElementById('complemento-personaje');
        const caracteristicasFisicasSelect = document.getElementById('caracteristicas-fisicas');
        const estiloPielSelect = document.getElementById('estilo-piel');
        const estiloCabelloSelect = document.getElementById('estilo-cabello');
        const colorPeloSelect = document.getElementById('color-pelo');
        const colorOjosSelect = document.getElementById('color-ojos');
        const directioneyesSelect = document.getElementById('direction-eyes');
        const emocionSelect = document.getElementById('emocion');
        const poseSelect = document.getElementById('pose');
        const rasgosSelect = document.getElementById('rasgos');
        const accionSelect = document.getElementById('accion');
        const estiloRopaSelect = document.getElementById('estilo-ropa');
        const accesoriosSelect = document.getElementById('accesorios');
        const clothingcustomSelect = document.getElementById('clothing-custom');
        const contextoSelect = document.getElementById('contexto');
        const artflowSelect = document.getElementById('artflow');
        const artflowcustomSelect = document.getElementById('artflow-custom');
        const epocaSelect = document.getElementById('epoca');
        const momentoDiaSelect = document.getElementById('momento-dia');
        const scenecustomSelect = document.getElementById('scene-custom');
        const tipoEscenaSelect = document.getElementById('tipo-escena');
        const planoImagenSelect = document.getElementById('plano-imagen');
        const iluminacionSelect = document.getElementById('iluminacion');
        const estiloColoresSelect = document.getElementById('estilo-colores');
        const efectosSelect = document.getElementById('efectos');
        const calidadSelect = document.getElementById('calidad');
        const generarPromptButton = document.getElementById('generar-prompt');
        const copiarPromptButton = document.getElementById('copiar-prompt');
        const promptResultTextarea = document.getElementById('prompt-result');

        // Función generadora de prompt optimizada para IA
        function generarPrompt(e) {
            e.preventDefault();
            
            // Obtener valores
            const estiloArtistico = estiloArtisticoSelect.value;
            const stylecustom = stylecustomSelect.value;
            const grupo = grupoSelect.value;
            const groupcustom = groupcustomSelect.value;
            const personaje = personajeSelect.value;
    const complementopersonaje = complementopersonajeSelect.value;
            const caracteristicasFisicas = caracteristicasFisicasSelect.value;
            const estiloPiel = estiloPielSelect.value;
            const estiloCabello = estiloCabelloSelect.value;
            const colorPelo = colorPeloSelect.value;
            const colorOjos = colorOjosSelect.value;
            const directioneyes = directioneyesSelect.value;
            const emocion = emocionSelect.value;
            const rasgos = rasgosSelect.value;
            const pose = poseSelect.value;
            const accion = accionSelect.value;
            const estiloRopa = estiloRopaSelect.value;
            const accesorios = accesoriosSelect.value;
            const clothingcustom = clothingcustomSelect.value;
            const contexto = contextoSelect.value;
            const artflow = artflowSelect.value;
    const artflowcustom = artflowcustomSelect.value;
            const epoca = epocaSelect.value;
            const momentoDia = momentoDiaSelect.value;
            const scenecustom = scenecustomSelect.value;
            const tipoEscena = tipoEscenaSelect.value;
            const planoImagen = planoImagenSelect.value;
            const iluminacion = iluminacionSelect.value;
            const estiloColores = estiloColoresSelect.value;
            const efectos = efectosSelect.value;
            const calidad = calidadSelect.value;
            const platform = document.querySelector('input[name="platform"]:checked').value;

            // Estructura optimizada para IA
            let promptParts = [];
            
            // 1. Calidad y estilo artístico (lo primero que deben ver los modelos)
            if (estiloArtistico) promptParts.push(estiloArtistico + " style");
            if (calidad) promptParts.push(calidad);
                if (stylecustom) promptParts.push(stylecustom);
            
            // 2. Sujeto principal con detalles (enfoque principal)
            if (personaje) {
                let subjectDescription = personaje;
                
                if (grupo) subjectDescription += `, ${grupo}`;
                if (groupcustom) subjectDescription += `, ${groupcustom}`;
                if (caracteristicasFisicas) subjectDescription += `, ${caracteristicasFisicas}`;
                if (complementopersonaje) subjectDescription += `, ${complementopersonaje}`;
                if (estiloPiel) subjectDescription += `, ${estiloPiel}`;
                if (estiloCabello && colorPelo) subjectDescription += `, ${estiloCabello} ${colorPelo}`;
                else if (estiloCabello) subjectDescription += `, ${estiloCabello} hair`;
                else if (colorPelo) subjectDescription += `, ${colorPelo}`;
                if (directioneyes) subjectDescription += `, ${directioneyes}`;
                if (colorOjos) subjectDescription += `, ${colorOjos}`;
                if (emocion) subjectDescription += `, ${emocion} expression`;
                if (rasgos) subjectDescription += `, ${rasgos}`;

                promptParts.push(subjectDescription);
            }
            
            // 4. Vestimenta y accesorios (si no es un grupo)

                let clothingParts = [];
                if (estiloRopa) clothingParts.push(`wearing ${estiloRopa}`);
                if (accesorios) clothingParts.push(accesorios);
                if (clothingcustom) clothingParts.push(clothingcustom);
                if (clothingParts.length > 0) {
                    promptParts.push(clothingParts.join(', '));

            }
            
            // 5. Acción y pose
            let actionParts = [];
            if (pose) actionParts.push(`${pose} pose`);
            if (accion) actionParts.push(accion);
            if (actionParts.length > 0) {
                promptParts.push(actionParts.join(', '));
            }
            
            // 6. Escenario y contexto
            let sceneParts = [];
            if (contexto) sceneParts.push(contexto);
            if (artflow) sceneParts.push(artflow);
            if (artflowcustom) sceneParts.push(artflowcustom);
            if (tipoEscena) sceneParts.push(`in ${tipoEscena}`);
            if (epoca) sceneParts.push(`${epoca} era`);
            if (momentoDia) sceneParts.push(momentoDia);
            if (scenecustom) sceneParts.push(scenecustom);
            if (sceneParts.length > 0) {
                promptParts.push(sceneParts.join(', '));
            }
            
            // 7. Composición técnica (importante para calidad)
            let techParts = [];
            if (planoImagen) techParts.push(`${planoImagen} shot`);
            if (iluminacion) techParts.push(`${iluminacion} `);
            if (estiloColores) techParts.push(`${estiloColores} color palette`);
            if (efectos) techParts.push(`${efectos}`);
            if (techParts.length > 0) {
                promptParts.push(techParts.join(', '));
            }
            
            // 8. Palabras clave finales para refinar
            const finalKeywords = ["Lost in thought gaze", "Looking away from the camera", "Candid photography", "Authentic capture", "flawless anatomy","correct anatomy","no extra limbs","Fine-tune the final details" ];
            promptParts.push(finalKeywords.join(', '));

          
            
            // Formateo especial para diferentes plataformas
            let finalPrompt = promptParts.join(', ');
            
            switch(platform) {
                case "midjourney":
                    finalPrompt += " --v 5 --ar 16:9 --q 2 --style 4b";
                    break;
                case "dalle":
                    finalPrompt = "A highly detailed digital artwork of " + finalPrompt + ", digital painting, trending on artstation";
                    break;
                case "flux":
                    finalPrompt += " ::4K::trending on artstation:";
                    break;
            }
            
            promptResultTextarea.value = finalPrompt;
        }

        // Función para copiar el prompt
        function copiarPrompt(e) {
            e.preventDefault();
            
            if (!promptResultTextarea.value) {
                alert("Primero genera un prompt antes de copiar");
                return;
            }
            
            promptResultTextarea.select();
            promptResultTextarea.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(promptResultTextarea.value)
                .then(() => {
                    // Feedback visual mejorado
                    const originalText = copiarPromptButton.textContent;
                    copiarPromptButton.textContent = "¡Copiado!";
                    copiarPromptButton.classList.remove('btn-secondary');
                    copiarPromptButton.classList.add('bg-green-500', 'hover:bg-green-600');
                    
                    setTimeout(() => {
                        copiarPromptButton.textContent = originalText;
                        copiarPromptButton.classList.remove('bg-green-500', 'hover:bg-green-600');
                        copiarPromptButton.classList.add('btn-secondary');
                    }, 2000);
                })
                .catch(err => {
                    console.error('Error al copiar: ', err);
                    alert("Error al copiar el prompt");
                });
        }

        // Event listeners
        generarPromptButton.addEventListener('click', generarPrompt);
        copiarPromptButton.addEventListener('click', copiarPrompt);
    });
</script>
